.top
  .top-body
    = render "homes/header"
    .toptitle
      Anime Tweet
  .top-body2
  - if user_signed_in?
    .top-content
      投稿してみよう！
      .signup-box
        .signup-font
          Post
        = link_to new_tweet_path do
          .signup-btn
            .btn-triangle
    .top-content2
      Tweets　List
      .signup-box
        .signup-font
          See list
        = link_to tweets_path do
          .signup-btn
            .btn-triangle
  -else
    .top-content
      さぁ　今すぐ始めよう！
      .signup-box
        .signup-font
          signup
        = link_to new_user_registration_path do
          .signup-btn
            .btn-triangle
    .top-content2
      Loginはこちらから
      .signup-box
        .signup-font
          Login
        = link_to new_user_session_path do
          .signup-btn
            .btn-triangle